<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.JYProject.project.repository.mybatis.LikeMapperRepository">
    <resultMap id="likeResultMap" type="com.JYProject.project.model.Like">
    <id property="likeId" column="like_id"/>
    <result property="boardId" column="board_id"/>
    <result property="memberId" column="member_id"/>
    <result property="isLikes" column="is_Likes"/>
    </resultMap>
    <insert id="insertLikeBoard" parameterType="com.JYProject.project.model.Like">
        insert into likes ( member_id, board_id) values (#{memberId)},#{boardId});
    </insert>

    <select id="getAllLikes" parameterType="Long" resultMap="likeResultMap">
        select * from likes where Like_id=#{id};
    </select>
    <select id="getOneLikesBoardAndMemberId" parameterType="com.JYProject.project.model.Like" resultMap="boolean">
        select * from likes where Board_id=#{boardId}
        and Member_id=#{memberId};
    </select>
    </mapper>