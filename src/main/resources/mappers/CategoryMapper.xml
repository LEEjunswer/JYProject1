<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.JYProject.project.repository.mybatis.CategoryMapperRepository">
    <insert id="makeCategory" parameterType="com.JYProject.project.model.dto.CategoryDTO">
    insert into category(category_name, reg_date) values (#{categoryName},#{regDate});
    </insert>
    <update id="updateCategory" parameterType="com.JYProject.project.model.dto.CategoryDTO">
        update category set category_name =#{categoryName}, reg_date=now() where category_id=#{categoryId};
    </update>
    <select id="selectOneCategory" parameterType="Long" resultType="com.JYProject.project.model.dto.CategoryDTO">
      select * from category where category_id = #{id};
    </select>
    <select id="gelAllCategory" resultType="com.JYProject.project.model.dto.CategoryDTO">
    select *  from category;
    </select>

    <select id="selectAllCategory" parameterType="Long" resultType="com.JYProject.project.model.dto.CategoryDTO">
    select * from category where category_id  =#{id};
    </select>

</mapper>